{
    "name": "bigpixelrocket/deployer-php",
    "description": "Deploy your PHP applications with ease",
    "type": "library",
    "keywords": [
        "deployment",
        "server",
        "automation",
        "devops"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucian Vacaroiu",
            "email": "lucian@DeployerPlus.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.10",
        "phpseclib/phpseclib": "^3.0",
        "symfony/console": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/filesystem": "^7.3",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Bigpixelrocket\\DeployerPHP\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bigpixelrocket\\DeployerPHP\\Tests\\": "tests/"
        },
        "exclude-from-classmap": [
            "tests/Unit/ContainerTest.php"
        ]
    },
    "bin": [
        "bin/deployer"
    ],
    "scripts": {
        "pall": [
            "composer pint && composer pstan && composer rect && composer pest"
        ],
        "pest": [
            "vendor/bin/pest --parallel --coverage"
        ],
        "pint": [
            "vendor/bin/pint --parallel"
        ],
        "pstan": [
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "rect": [
            "vendor/bin/rector process"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
